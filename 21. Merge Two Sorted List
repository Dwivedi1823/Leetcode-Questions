class Solution {
public:
    ListNode* mergeTwoLists(ListNode* list1, ListNode* list2) 
    {
        ListNode *head1 = list1;
        ListNode *head2 = list2;
        ListNode *head = NULL;
        ListNode *tail = NULL;
        
        if(list1 == NULL)
            return list2;
        else if(list2 == NULL)
            return list1;
        
        if(head1->val <= head2->val)
            head = tail = head1;
        else
            head = tail = head2;
        
        while(head1 and head2)
        {
            ListNode *temp;
            if(head1->val <= head2->val)
            {
                temp = head1 ;
                head1 = head1->next;
            }
            else
            {
                temp = head2;
                head2 = head2->next;
            }
            tail->next = temp;
            tail = temp;
        }
        if(head1)
        {
            tail->next = head1;
            //head1 = head1->next;
        }
        if(head2)
        {
            tail->next = head2;
           // head2 = head2->next;
        }
        
        
        return head;
        
    }
};
